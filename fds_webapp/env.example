# Environment Variables for FDS Web Application
# Copy this file to .env and fill in your actual values

# Django Settings
SECRET_KEY=your-super-secret-django-key-here-change-this-in-production
DEBUG=False
ALLOWED_HOSTS=your-domain.com,www.your-domain.com,your-server-ip

# Database Configuration (PostgreSQL)
DB_NAME=fds_webapp
DB_USER=fds_user
DB_PASSWORD=your-database-password
DB_HOST=localhost
DB_PORT=5432

# Email Configuration (for user verification and notifications)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@your-domain.com

# Redis Configuration (for caching)
REDIS_URL=redis://127.0.0.1:6379/1

# GitHub API (optional - for data acquisition)
GITHUB_TOKEN=your-github-personal-access-token
